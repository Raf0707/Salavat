<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/duaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:strokeColor="@color/purple_300">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/duaArabicText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Арабский текст: \n"
                    android:textStyle="bold"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/duaTranscriptText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Транскрипция: \n "
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/duaTranslateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Перевод: \n"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/sepline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_separator_empty_line_ \n \n "
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>